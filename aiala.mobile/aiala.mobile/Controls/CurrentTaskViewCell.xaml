<?xml version="1.0" encoding="UTF-8"?>
<ViewCell xmlns="http://xamarin.com/schemas/2014/forms" 
          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
          xmlns:controls="clr-namespace:aiala.mobile.Controls"
          x:Class="aiala.mobile.Controls.CurrentTaskViewCell"
          Tapped="ViewCell_Tapped">
    <ViewCell.View>
        <Frame IsClippedToBounds="True"
               HasShadow="True"
               BackgroundColor="{StaticResource currentTaskBackground}"
               BorderColor="{StaticResource currentTaskBackground}"
               Margin="20,10,20,10"
               Padding="20,0,10,0">
            <controls:TaskViewCell />
        </Frame>
    </ViewCell.View>
</ViewCell>